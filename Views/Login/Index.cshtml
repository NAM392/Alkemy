@model Alkemy_1.DTO.LogDTO


@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Logger", "Login", FormMethod.Post))
{
    <fieldset>
        <legend>Login</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.IsStudent)</td>
            <td>@Html.CheckBoxFor(a => a.IsStudent)</td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(a => a.username)
        </td>
        <td>@Html.TextBoxFor(a => a.username)</td>
        <td>@Html.ValidationMessageFor(a => a.username)</td>
    </tr>
    <tr>

        <td>
            @Html.LabelFor(a => a.password)
        </td>
        <td>@Html.PasswordFor(a => a.password)</td>
        <td>@Html.ValidationMessageFor(a => a.password)</td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input type="submit" value="Login" />
        </td>
        <td></td>
    </tr>
    </table>
    </fieldset>
}  