
@model IEnumerable<Alkemy_1.Models.inscription>

@{
    ViewData["Title"] = "Inscriptions";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.studentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.courseId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.studentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.courseId)
                </td>
      
                <td>
                    <a asp-action="Edit" asp-route-id="@item.inscriptionID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.inscriptionID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.inscriptionID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


